<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox alignment="TOP_CENTER" spacing="50"  xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Labrys.controller.SoundboardController"
      style="

      -fx-background-image: url(https://cdn.pixabay.com/photo/2022/06/23/18/45/ufo-7280415_960_720.jpg);
      -fx-background-position: center center;">
    <Label text="soundboard"
        style="
        -fx-padding: 60px;
       -fx-font-family: Impact;
       -fx-font-size: 50px;
       -fx-text-fill: rgb(237, 237, 218);
       "/>
    <HBox alignment="CENTER" spacing="30.0">
        <VBox spacing="10.0">
            <Label text="Soundtracks"
            style="
                -fx-text-fill: rgb(237, 237, 218);
                -fx-font-size: 20px;"/>
            <Button text="alarm" onAction="#alarm" maxWidth="110"/>
            <Button text="mysterious track" onAction="#mysterious" maxWidth="110"/>
            <Button text="scary sound" onAction="#scary" maxWidth="110"/>

        </VBox>
        <VBox spacing="10.0">
            <Label text="Soundbites"
                   style="

                -fx-text-fill: rgb(237, 237, 218);
                -fx-font-size: 20px;"/>
            <Button text="cryo opening" onAction="#cryo" maxWidth="110" />
            <Button text="spacedoor" onAction="#spacedoor" maxWidth="110" />
            <Button text="crash" onAction="#crash" maxWidth="110" />
        </VBox>

    </HBox>

</VBox>
